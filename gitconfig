[core]
	editor = vim
[init]
	defaultBranch = main
[user]
	name  = progrhyme
	email = progrhyme@gmail.com
[push]
	default = simple
[pull]
	ff = only
[help]
	autocorrect = 1
[color]
	ui = true
[alias]
	st      = status --short
	df      = diff
	dfc     = diff --cached
	ci      = commit -v
	co      = checkout
	br      = branch
	amend   = commit --amend -v
	plr     = pull --prune
	bc      = branch-clean
	bcp     = branch-clean --pull
	pushf   = push --force-with-lease
	rewrite = rebase -i
	rw      = rebase -i
	unstage = reset HEAD
	tree    = log --graph --date=relative --pretty='%C(auto)%h%d (%ad) %Cgreen%an%Creset : %s'
	graph   = log --oneline --graph --decorate
[include]
	path = .gitconfig.local
